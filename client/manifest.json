{
    "manifest_version": 2,
    "name": "Disney + Friends",
    "version": "0.1",
    "description": "Watch Disney+ with friends DO NOT DISTRIBUTE",
    "permissions": [
        "activeTab",
        "webNavigation",
        "https://www.disneyplus.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "38": "images/icon-38.png"
        },
        "default_title": "DP",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": ["player.js"],
    "browser_specific_settings": {
        "gecko": {
            "id": "disneyplus@the.yiff.army"
        }
    }
}