{
    "manifest_version": 2,
    "name": "Disney+ Party",
    "version": "0.1",
    "description": "Watch Disney+ with friends",
    "permissions": [
        "activeTab",
        "webNavigation",
        "https://www.disneyplus.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "38": "images/icon-38.png"
        },
        "default_title": "DP",
        "default_popup": "popup.html"
    }
}